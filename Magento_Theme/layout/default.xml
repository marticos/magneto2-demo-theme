<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_alt" xsi:type="string">PHP Logo :-)</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="wish-list-link" remove="true"/>
        <referenceContainer name="footer">
            <container name="custom_footer_block_wrapper" htmlTag="div" htmlClass="custom-footer-block" after="-">
                <block class="Magento\Cms\Block\Block" name="custom_footer_block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">custom_footer_block</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
